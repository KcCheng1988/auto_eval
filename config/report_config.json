{
  "description": "Report generation configuration",
  "email_template": "default_template.html",
  "required_sections": [
    "overall_status",
    "use_case_info",
    "model_info",
    "validation_results",
    "evaluation_results",
    "threshold_checks"
  ],
  "report_settings": {
    "include_charts": false,
    "include_discrepancies": true,
    "max_discrepancies_shown": 10,
    "date_format": "%Y-%m-%d %H:%M:%S"
  },
  "recipients": {
    "to": [
      "operation-team-data-chapter@company.com"
    ],
    "cc": [
      "head-of-department@company.com"
    ]
  },
  "email_subject_template": "GenAI Evaluation Report - {use_case_name} - {status}",
  "styling": {
    "primary_color": "#667eea",
    "secondary_color": "#764ba2",
    "success_color": "#28a745",
    "error_color": "#dc3545",
    "warning_color": "#ffc107"
  }
}
